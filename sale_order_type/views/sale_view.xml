<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="view_order_form_inherit_z160503" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.z160503</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_stock.view_order_form_inherit"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="is_mto"/>
                <field name="is_walkin" attrs="{'invisible': [('is_mto','=',True)]}"/>
            </field>
        </field>
    </record>

    <record id="view_order_tree_z160504" model="ir.ui.view">
        <field name="name">sale.order.tree.z160504</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="is_mto"/>
            </xpath>
        </field>
    </record>

    <record id="view_quotation_tree_z160504" model="ir.ui.view">
        <field name="name">sale.order.tree.z160504</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="is_mto"/>
            </xpath>
        </field>
    </record>

    <record id="sale_order_line_quant_view_z160504" model="ir.ui.view">
        <field name="name">sale.order.line.inherit.view.z160504</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_line_quant.sale_order_line_quant_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']" position="replace">
                <field name="order_line" context="{'is_mto': is_mto}">
                    <form string="Sales Order Lines">
                        <header groups="base.group_user">
                            <button name="%(sale.action_view_sale_order_line_make_invoice)d" states="confirmed" string="Invoice" type="action" icon="terp-document-new"/>
                            <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done" statusbar_colors='{"exception":"red","cancel":"red"}'/>
                        </header>
                        <group>
                            <group>
                                <field name="product_id"
                                    context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty, 'pricelist':parent.pricelist_id, 'uom':product_uom, 'company_id': parent.company_id}"
                                    groups="base.group_user"
                                    on_change="product_id_change(parent.pricelist_id, product_id, product_uom_qty, False, product_uos_qty, False, name, parent.partner_id, False, True, parent.date_order, False, parent.fiscal_position, False, context)"/>

                                <field name="quant_id"
                                    options="{'no_quick_create':True, 'no_create_edit':True}"
                                    domain="[('reservation_id', '=', False),
                                             ('product_id','=',product_id),
                                             ('qty','>', 0.0),
                                             ('actual_qty','>', 0.0),
                                             ('usage', '=', 'internal')]"
                                    attrs="{'readonly': [('mto','=',True)]}"
                                    on_change="onchange_quant(quant_id, parent.date_order, parent.currency_id)"/>
                                <field name="lot_id" attrs="{'readonly': [('mto','=',True)]}"/>
                                <field name="route_id" groups="sale_stock.group_route_so_lines"
                                    attrs="{'readonly': [('quant_id','!=',False)]}"/>
                                <field name="mto" invisible="1"/>

                                <label for="product_uom_qty"/>
                                <div>
                                    <field
                                        context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty, 'pricelist':parent.pricelist_id, 'uom':product_uom, 'uom_qty_change':True, 'company_id': parent.company_id}"
                                        name="product_uom_qty" class="oe_inline"
                                        on_change="product_id_change(parent.pricelist_id,product_id,product_uom_qty,product_uom,product_uos_qty,product_uos,name,parent.partner_id, False, False, parent.date_order, False, parent.fiscal_position, True, context)"/>
                                    <field name="product_uom" groups="product.group_uom" class="oe_inline oe_no_button"
                                        context="{'company_id': parent.company_id}"
                                        on_change="onchange_product_uom(parent.pricelist_id,product_id,product_uom_qty,product_uom,product_uos_qty,product_uos,name,parent.partner_id, False, False, parent.date_order, parent.fiscal_position, context)"/>
                                </div>
                                <label for="product_uos_qty" groups="product.group_uos"/>
                                <div groups="product.group_uos">
                                    <field name="product_uos_qty" class="oe_inline"/>
                                    <field name="product_uos" options='{"no_open": True}' class="oe_inline"/>
                                </div>
                                <field name="price_unit"/>
                                <label for="discount" groups="sale.group_discount_per_so_line"/>
                                <div name="discount" groups="sale.group_discount_per_so_line">
                                    <field name="discount" class="oe_inline"/> %%
                                </div>
                            </group>
                            <group>
                                <field name="tax_id" widget="many2many_tags" domain="[('parent_id','=',False),('type_tax_use','&lt;&gt;','purchase')]"/>
                                <field name="th_weight"/>
                                <!-- we should put a config wizard for these two fields -->
                                <field name="address_allotment_id"/>
                            </group>
                        </group>
                        <label for="name"/>
                        <field name="name"/>
                        <div groups="base.group_no_one">
                            <label for="invoice_lines"/>
                            <field name="invoice_lines"/>
                        </div>
                    </form>



                    <tree string="Sales Order Lines" editable="bottom">
                        <field name="sequence" widget="handle"/>
                        <field name="state" invisible="1"/>
                        <field name="th_weight" invisible="1"/>
                        <field name="product_id"
                            context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty, 'pricelist':parent.pricelist_id, 'uom':product_uom, 'company_id': parent.company_id}"
                            groups="base.group_user"
                            on_change="product_id_change(parent.pricelist_id, product_id, product_uom_qty, False, product_uos_qty, False, name, parent.partner_id, False, True, parent.date_order, False, parent.fiscal_position, False, context)"/>
                        <field name="name"/>
                        <field name="product_uom_qty"
                            context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty, 'pricelist':parent.pricelist_id, 'uom':product_uom, 'company_id': parent.company_id}"
                            on_change="product_id_change(parent.pricelist_id, product_id, product_uom_qty, product_uom, product_uos_qty, product_uos, name, parent.partner_id, False, False, parent.date_order, False, parent.fiscal_position, True, context)"/>
                        <field name="product_uom"
                            context="{'company_id': parent.company_id}"
                            on_change="onchange_product_uom(parent.pricelist_id, product_id, product_uom_qty, product_uom, product_uos_qty, product_uos, name, parent.partner_id, False, False, parent.date_order, parent.fiscal_position, context)"
                            groups="product.group_uom" options='{"no_open": True}'/>
                        <field name="product_uos_qty" groups="product.group_uos" invisible="1"/>
                        <field name="product_uos" string="UoS" groups="product.group_uos" invisible="1"/>
                        <field name="price_unit"/>
                        <field name="tax_id" widget="many2many_tags" domain="[('parent_id','=',False),('type_tax_use','&lt;&gt;','purchase')]" invisible="1"/>
                        <field name="discount" groups="sale.group_discount_per_so_line"/>
                        <field name="price_subtotal"/>
                        <field name="quant_id"
                            options="{'no_quick_create':True, 'no_create_edit':True}"
                            domain="[('reservation_id', '=', False),
                                     ('product_id','=',product_id),
                                     ('qty','>', 0.0),
                                     ('actual_qty','>', 0.0),
                                     ('usage', '=', 'internal')]"
                            attrs="{'readonly': [('mto','=',True)]}"
                            on_change="onchange_quant(quant_id, parent.date_order, parent.currency_id)"/>
                        <field name="lot_id" attrs="{'readonly': [('mto','=',True)]}"/>
                        <field name="stock_owner_id" attrs="{'readonly': [('mto','=',True)]}"/>
                        <field name="route_id" groups="sale_stock.group_route_so_lines"
                            attrs="{'readonly': [('quant_id','!=',False)]}" invisible="1"/>
                        <field name="mto" invisible="1"/>
                        <field name="purchase_order_id" readonly="1" invisible="context.get('is_mto',False)"/>
                        <button name="action_view_purchase_open" type="object" icon="terp-gtk-jump-to-ltr" string="Open PO" attrs="{'invisible':[('purchase_order_id','=',False)]}"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>

    <record id="view_sales_order_filter_z160504" model="ir.ui.view">
        <field name="name">sale.order.list.select.z160504</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="is_mto"/>
            </xpath>
            <xpath expr="//filter[@string='My']" position="before">
                <filter string="Make to Order" domain="[('is_mto','=',True)]"/>
                <filter string="Stock" domain="[('is_mto','=','False)]"/>
                <separator/>
            </xpath>
            <xpath expr="//filter[@string='Salesperson']" position="before">
                <filter string="Order Type" domain="[]" context="{'group_by':'is_mto'}"/>
            </xpath>
        </field>
    </record>

</data>
</openerp>
